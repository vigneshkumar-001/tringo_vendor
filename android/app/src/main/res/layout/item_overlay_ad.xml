<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="12dp"
    android:orientation="vertical"
    android:background="@drawable/bg_ad_card"
    android:padding="12dp">

    <!-- Image -->
    <ImageView
        android:id="@+id/adImage"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_image_rounded"
        android:clipToOutline="true" />

    <!-- Trusted badge -->
    <TextView
        android:id="@+id/trustedBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-14dp"
        android:layout_marginStart="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Trusted"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="12sp"
        android:background="@drawable/bg_badge_trusted"
        android:visibility="gone" />

    <!-- Title -->
    <TextView
        android:id="@+id/adTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Sri Krishna"
        android:textColor="#0C2A3A"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1" />

    <!-- Address -->
    <TextView
        android:id="@+id/adSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="12, 2, Tirupparankunram..."
        android:textColor="#5D7685"
        android:textSize="13sp"
        android:maxLines="2" />

    <!-- Bottom Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="4.5 â˜…  16"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="12sp"
            android:background="@drawable/bg_chip_green"
            android:visibility="gone" />

        <TextView
            android:id="@+id/adOpenText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Closed today"
            android:textColor="#5D7685"
            android:textSize="12sp"
            android:maxLines="1" />
    </LinearLayout>

</LinearLayout>
